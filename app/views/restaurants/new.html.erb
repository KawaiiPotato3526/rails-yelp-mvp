<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <h1>Add A Restaurant Card</h1>
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: %w(chinese italian japanese french belgian), as: :radio_buttons %>
        <%= f.submit %>
        <%= link_to "Back to List", restaurants_path, class: "btn btn-danger"%>
      <% end %>
    </div>
  </div>
</div>